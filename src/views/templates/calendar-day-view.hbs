<div class="oa-calendar-container">
  <div class="oa-calendar-toolbar">
    <div class="oa-calendar-current-period">
      <h2>{{calendar.periodName}}</h2>
    </div>
    
    <div class="oa-calendar-nav-container">
      <div class="oa-calendar-view-selector">
        <select id="oa-calendar-view-dropdown" class="oa-calendar-view-dropdown">
          <option value="month" {{#equals calendar.viewType "month"}}selected{{/equals}}>{{t "month_view"}}</option>
          <option value="week" {{#equals calendar.viewType "week"}}selected{{/equals}}>{{t "week_view"}}</option>
          <option value="workweek" {{#equals calendar.viewType "workweek"}}selected{{/equals}}>{{t "workweek_view"}}</option>
          <option value="day" {{#equals calendar.viewType "day"}}selected{{/equals}}>{{t "day_view"}}</option>
        </select>
      </div>
      
      <div class="oa-calendar-navigation">
        <button class="oa-calendar-prev" aria-label="{{t 'previous'}}">
          <span class="icon">◀</span>
        </button>
        <button class="oa-calendar-today" aria-label="{{t 'today'}}">
          {{t 'today'}}
        </button>
        <button class="oa-calendar-next" aria-label="{{t 'next'}}">
          <span class="icon">▶</span>
        </button>
      </div>
    </div>
  </div>
  {{!-- Vista diaria --}}
  {{#equals calendar.viewType "day"}}
  <div class="oa-calendar-day-view">
    <div class="oa-calendar-day-container">
      <div class="oa-calendar-day-main-view">
        <div class="oa-calendar-day-header">
          <div class="oa-calendar-day-column-header {{#if calendar.isToday}}oa-calendar-today{{/if}}">
            <div class="oa-calendar-day-name">{{calendar.dayName}}</div>
            <div class="oa-calendar-date">{{getDayOfMonth calendar.date}}</div>
          </div>
        </div>
        <div class="oa-calendar-day-body">
          <div class="oa-calendar-day-full-row">
            <div class="oa-calendar-day-column {{#if calendar.isToday}}oa-calendar-today{{/if}}" data-date="{{toISODate calendar.date}}">
              {{#each calendar.tasksForDay}}
                <div class="oa-calendar-task" 
                    data-file-path="{{file.path}}" 
                    data-line-number="{{line.number}}"
                    data-tooltip="{{section.desc}}">
                  <span class="oa-task-title">{{section.desc}}</span>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

      <div class="oa-calendar-mini-sidebar">
        <div class="oa-calendar-mini-month">
          <div class="oa-calendar-mini-month-header">
            <div class="oa-mini-month-nav">
              <button class="oa-mini-calendar-prev" aria-label="{{t 'previous_month'}}">
                <span class="icon">◀</span>
              </button>
              <div class="oa-mini-month-name">{{calendar.miniCalendar.monthName}}</div>
              <button class="oa-mini-calendar-next" aria-label="{{t 'next_month'}}">
                <span class="icon">▶</span>
              </button>
            </div>
          </div>
          <div class="oa-calendar-mini-month-weekdays">
            {{#each calendar.miniCalendar.weekdays}}
              <div class="oa-calendar-mini-weekday">{{this}}</div>
            {{/each}}
          </div>
          <div class="oa-calendar-mini-month-grid">
            {{#each calendar.miniCalendar.weeks}}
              <div class="oa-calendar-mini-week">
                {{#each this}}
                  <div class="oa-calendar-mini-day {{#if isCurrentMonth}}oa-current-month{{else}}oa-other-month{{/if}} {{#if isToday}}oa-mini-today{{/if}} {{#if isSelected}}oa-mini-selected{{/if}}" 
                       data-date="{{date}}">
                    <div class="oa-mini-day-content {{#if hasTasks}}oa-has-tasks{{/if}}">
                      {{day}}
                    </div>
                  </div>
                {{/each}}
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/equals}}
</div>


