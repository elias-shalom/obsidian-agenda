<div class="calendar-container">
  <div class="calendar-toolbar">
    <div class="calendar-current-period">
      <h2>{{calendar.periodName}}</h2>
    </div>
    <div class="calendar-view-controls">
      <select class="calendar-view-type">
        <option value="month">{{t 'month_view'}}</option>
        <option value="week">{{t 'week_view'}}</option>
        <option value="workweek">{{t 'workweek_view'}}</option>
        <option value="day">{{t 'day_view'}}</option>
      </select>
    </div>
    <div class="calendar-buttons">
      <button id="month-view-button">{{t "month_view"}}</button>
      <button id="week-view-button">{{t "week_view"}}</button>
      <button id="day-view-button">{{t "day_view"}}</button>
  </div>
    <div class="calendar-navigation">
      <button class="calendar-prev" aria-label="{{t 'previous'}}">
        <span class="icon">←</span>
      </button>
      <button class="calendar-today" aria-label="{{t 'today'}}">
        {{t 'today'}}
      </button>
      <button class="calendar-next" aria-label="{{t 'next'}}">
        <span class="icon">→</span>
      </button>
    </div>
  </div>

  {{!-- Vista mensual --}}
  {{#equals calendar.viewType "month"}}
  <div class="calendar-month-view">
    <div class="calendar-month-header-row">
      <div class="calendar-month-week-number-header">{{t 'week'}}</div>
      <div class="calendar-month-weekdays">
        {{#each calendar.dayNames}}
          <div class="calendar-weekday">{{this}}</div>
        {{/each}}
      </div>
    </div>

    <div class="calendar-month-grid">
      {{#each calendar.weeks}}
        <div class="calendar-month-week">
          <div class="calendar-month-week-number">w{{weekNumber}}</div>

          <div class="calendar-month-days-row">
            {{#each days}}
              <div class="calendar-month-day {{#unless isCurrentMonth}}calendar-other-month{{/unless}} {{#if isToday}}calendar-today{{/if}}" data-date="{{toISODate dateValue}}">
                <div class="calendar-month-day-header">
                  <span class="calendar-month-day-number">{{dayOfMonth}}</span>
                </div>
                <div class="calendar-month-day-content">
                  {{#each tasksForDay}}
                    <div class="calendar-task" 
                         data-file-path="{{filePath}}" 
                         data-line-number="{{lineNumber}}"
                         title="{{description}}">
                      <span class="task-title">{{description}}</span>
                    </div>
                  {{/each}}
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  {{/equals}}

  {{!-- Vista semanal --}}
  {{#equals calendar.viewType "week"}}
  <div class="calendar-week-view">
    <div class="calendar-week-header">
      {{#each calendar.dayNames}}
        <div class="calendar-weekday">{{this}}</div>
      {{/each}}
    </div>
    
    <div class="calendar-week-body">
      <div class="calendar-days-row">
        {{#each calendar.days}}
          <div class="calendar-week-day-container {{#if isToday}}calendar-today{{/if}}" data-date="{{toISODate dateValue}}">
            <div class="calendar-week-day-header">
              <div class="calendar-day-name">{{dayName}}</div>
              <div class="calendar-date">{{dayOfMonth}}</div>
            </div>
            <div class="calendar-day-content">
              {{#each tasksForDay}}
                <div class="calendar-task" 
                     data-file-path="{{filePath}}" 
                     data-line-number="{{lineNumber}}"
                     title="{{description}}">
                  <span class="task-title">{{description}}</span>
                </div>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{/equals}}

  {{!-- Vista de semana laboral --}}
  {{#equals calendar.viewType "workweek"}}
  <div class="calendar-workweek-view">
    <div class="calendar-week-header">
      {{#each calendar.dayNames}}
        <div class="calendar-weekday">{{this}}</div>
      {{/each}}
    </div>
    
    <div class="calendar-week-body">
      <div class="calendar-days-row">
        {{#each calendar.days}}
          <div class="calendar-week-day-container {{#if isToday}}calendar-today{{/if}}" data-date="{{toISODate dateValue}}">
            <div class="calendar-week-day-header">
              <div class="calendar-day-name">{{dayName}}</div>
              <div class="calendar-date">{{dayOfMonth}}</div>
            </div>
            <div class="calendar-day-content">
              {{#each tasksForDay}}
                <div class="calendar-task" 
                     data-file-path="{{filePath}}" 
                     data-line-number="{{lineNumber}}"
                     title="{{description}}">
                  <span class="task-title">{{description}}</span>
                </div>
              {{/each}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{/equals}}

  {{!-- Vista diaria --}}
  {{#equals calendar.viewType "day"}}
  <div class="calendar-day-view">
    <div class="calendar-day-header">
      <div class="calendar-time-column calendar-day-hour-header"></div>
      <div class="calendar-day-column-header {{#if calendar.isToday}}calendar-today{{/if}}">
        <div class="calendar-day-name">{{calendar.dayName}}</div>
        <div class="calendar-date">{{calendar.date.day}}</div>
      </div>
    </div>
    
    <div class="calendar-day-body">
      {{#each calendar.hourSlots}}
        <div class="calendar-hour-row">
          <div class="calendar-time-column">
            <div class="calendar-hour-label">{{formattedHour}}</div>
          </div>
          
          <div class="calendar-day-column {{#if ../calendar.isToday}}calendar-today{{/if}}" data-date="{{../calendar.date.toISODate}}" data-hour="{{hour}}">
            <div class="calendar-hour-cell">
              {{#each tasks}}
                <div class="calendar-task" 
                     data-file-path="{{filePath}}" 
                     data-line-number="{{lineNumber}}"
                     title="{{description}}">
                  <span class="task-title">{{description}}</span>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  {{/equals}}
</div>