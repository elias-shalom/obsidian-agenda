<div class="oa-calendar-container">
  <div class="oa-calendar-toolbar">
    <div class="oa-calendar-current-period">
      <h2>{{calendar.periodName}}</h2>
    </div>
    
    <div class="oa-calendar-nav-container">
      {{#equals calendar.viewType "workweek"}}
      <div class="oa-calendar-grid-style-selector">
        <select id="oa-calendar-grid-style" class="oa-calendar-grid-style-dropdown">
          <option value="default">{{t "default_grid"}}</option>
          <option value="style1">{{t "grid_style1"}}</option>
          <option value="style2">{{t "grid_style2"}}</option>
          <option value="style3">{{t "grid_style3"}}</option>
          <option value="style4">{{t "grid_style4"}}</option>
          <option value="style5">{{t "grid_style5"}}</option>
          <option value="style6">{{t "grid_style6"}}</option>
          <option value="style7">{{t "grid_style7"}}</option>
          <option value="style8">{{t "grid_style8"}}</option>
          <option value="style9">{{t "grid_style9"}}</option>
          <option value="style10">{{t "grid_style10"}}</option>
          <option value="style11">{{t "grid_style11"}}</option>
        </select>
      </div>
      {{/equals}}
      <div class="oa-calendar-view-selector">
        <select id="oa-calendar-view-dropdown" class="oa-calendar-view-dropdown">
          <option value="month" {{#equals calendar.viewType "month"}}selected{{/equals}}>{{t "month_view"}}</option>
          <option value="week" {{#equals calendar.viewType "week"}}selected{{/equals}}>{{t "week_view"}}</option>
          <option value="workweek" {{#equals calendar.viewType "workweek"}}selected{{/equals}}>{{t "workweek_view"}}</option>
          <option value="day" {{#equals calendar.viewType "day"}}selected{{/equals}}>{{t "day_view"}}</option>
        </select>
      </div>
      <div class="oa-calendar-navigation">
        <button class="oa-calendar-prev" aria-label="{{t 'previous'}}">
          <span class="icon">◀</span>
        </button>
        <button class="oa-calendar-today" aria-label="{{t 'today'}}">
          {{t 'today'}}
        </button>
        <button class="oa-calendar-next" aria-label="{{t 'next'}}">
          <span class="icon">▶</span>
        </button>
      </div>
    </div>
  </div>
  {{!-- Vista de semana laboral --}}
  {{#equals calendar.viewType "workweek"}}
  <div class="oa-calendar-workweek-view">
    <div class="oa-calendar-week-body">
      <div class="oa-calendar-week-days-row">
        {{#each calendar.days}}
          <div class="oa-calendar-week-day-container {{#if isToday}}oa-calendar-today{{/if}}" data-date="{{toISODate dateValue}}">
            <div class="oa-calendar-week-day-header">
              <div class="oa-calendar-day-name">{{dayName}}</div>              
            </div>
            <div class="oa-calendar-day-content">
              {{#each tasksForDay}}
                <div class="oa-calendar-task" 
                    data-file-path="{{file.path}}" 
                    data-line-number="{{line.number}}"
                    title="{{file.name}}:{{line.number}} - {{section.desc}}">
                  <span class="oa-task-title">{{section.desc}}</span>
                </div>
              {{/each}}
            </div>
            <div class="oa-calendar-date">{{dayOfMonth}}</div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  {{/equals}}
</div>


